@model IEnumerable<Food>
@{
    ViewData["Title"] = "Index";
}



<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="row">
                <div class="offset-lg-1 offset-md-1 offset-sm-1 col-lg-10 col-md-10 col-sm-10 jumbotron">
                    <div class="row">
                        <div class="col-7">
                            <img src="@Url.Content(item.Picture)" class="card-img" />
                        </div>
                        <div class="col-5">
                            <h5>@item.FoodName</h5>
                            <p>@item.Type</p>
                            <p>@item.CodeNumber</p>
                            <p>Tk.@item.Price</p>
                        </div>
                    </div>

                    <div class="btn-group btn-group-sm d-flex justify-content-center">
                        <a asp-action="Details" asp-controller="Food" asp-route-id="@item.FoodId" class="btn btn-primary btn-sm">Details</a>
                        <a asp-action="Edit" asp-controller="Food" asp-route-id="@item.FoodId" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Food" asp-route-id="@item.FoodId" onclick="return confirm('Are you sure about delete the record?')" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>
