@model CreateRoleViewModel
@{ ViewBag.Title = "Create New Role";}
<h3>Create New Role</h3>
<form asp-controller="Administration" asp-action="CreateRole" method="post">
    <div class="form-group row">
        <label asp-for="RollName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RollName" class="form-control" placeholder="Name" />
            <span asp-validation-for="RollName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" style="width:auto" class="btn btn-primary">Create Role</button>
        </div>
    </div>
</form>

